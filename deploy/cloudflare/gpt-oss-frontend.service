[Unit]
Description=GPT-OSS Gradio Frontend
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/murr/Project
Environment=GRADIO_SERVER_NAME=0.0.0.0
Environment=GRADIO_SERVER_PORT=7860
Environment=DISABLE_TIMERS=1
ExecStart=/home/murr/Project/.venv/bin/python /home/murr/Project/gpt-oss-web/fixed_app.py
Restart=always
RestartSec=5
User=murr

[Install]
WantedBy=multi-user.target
